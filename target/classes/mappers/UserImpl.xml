<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.studio.zps.blue.ljy.dao.UserDao">
    <resultMap id="UserMap" type="User" >
        <id column="id" property="id" />
        <result column="userName" property="userName" />
        <result column="nickName" property="nickName" />
        <result column="password" property="password" />
        <result column="gender" property="gender" />
        <result column="age" property="age" />
        <collection property="roles" ofType="Role">
            <result column="r_id" property="id" />
            <result column="role" property="role" />
            <result column="r_title" property="title" />
            <result column="rank" property="rank" />
        </collection>
    </resultMap>

    <select id="getBaseUser" parameterType="Long" resultMap="UserMap" >
        SELECT user.*
        ,role.id r_id , role.role role, role.title r_title , role.rank rank
        FROM USER
        ,user_role,role
        WHERE
        role.id = user_role.roleID AND user_role.userID = user.id
        AND user.id=#{userId}
    </select>

</mapper>